{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "es2018",
    "allowJs": false,
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "types": []
  },
  "include": ["./**/*.ts", "./**/*.js", "../../_locales/*.json"],
  "exclude": ["./ts-compiled-for-tests", "**/*.test.ts", "**/__tests__"]
}
